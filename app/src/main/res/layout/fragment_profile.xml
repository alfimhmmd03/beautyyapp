<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpita"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Foto Profil Bulet -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="24dp">

            <!-- Background Buletan -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_circle_bg" />

            <!-- Foto -->
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:elevation="10dp"
                android:src="@drawable/pinkprofile" />
        </FrameLayout>

        <!-- Kontainer Info Profil -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:padding="16dp"
            android:elevation="40dp"
            android:backgroundTint="@color/pink_rose"
            android:layout_marginBottom="24dp">

            <!-- Nama -->
            <TextView android:text="Nama Lengkap:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNama"
                android:text="-"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Email -->
            <TextView android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvEmail"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Jenis Kulit -->
            <TextView android:text="Jenis Kulit:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvKulit"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Tujuan Perawatan -->
            <TextView android:text="Tujuan Perawatan:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTujuan"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Logout -->
        <Button
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:layout_marginTop="200dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:backgroundTint="#DB8593"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
