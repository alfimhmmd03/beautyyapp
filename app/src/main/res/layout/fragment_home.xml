<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wpbg">

    <LinearLayout
        android:padding="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgMotivasi"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kosmetikpngg" />

        <Button
            android:id="@+id/btnAturJadwal"
            android:text="Atur Jadwal Skincare"
            android:layout_width="match_parent"
            android:textSize="19dp"
            android:textStyle="bold"
            android:backgroundTint="#D98A92"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvLabelHari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Skincare:"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHari"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
